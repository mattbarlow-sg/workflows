{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Application Configuration",
  "description": "Schema for application configuration files",
  "type": "object",
  "properties": {
    "appName": {
      "type": "string",
      "description": "Name of the application"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "port": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535,
      "description": "Server port number"
    },
    "debug": {
      "type": "boolean",
      "default": false,
      "description": "Enable debug mode"
    },
    "database": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "name": {
          "type": "string"
        },
        "user": {
          "type": "string"
        }
      },
      "required": ["host", "port", "name"],
      "additionalProperties": false
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    }
  },
  "required": ["appName", "version", "port"],
  "additionalProperties": false
}