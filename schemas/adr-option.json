{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ADR Option",
  "description": "Schema for decision options in Architecture Decision Records",
  "type": "object",
  "required": ["name", "description"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Option name",
      "minLength": 3,
      "maxLength": 50
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the option",
      "minLength": 10
    },
    "pros": {
      "type": "array",
      "description": "Advantages of this option",
      "items": {
        "type": "string",
        "minLength": 5
      }
    },
    "cons": {
      "type": "array",
      "description": "Disadvantages of this option",
      "items": {
        "type": "string",
        "minLength": 5
      }
    },
    "score": {
      "type": "number",
      "description": "Weighted score based on decision drivers (0-100)",
      "minimum": 0,
      "maximum": 100
    },
    "effort": {
      "type": "string",
      "description": "Implementation effort estimate",
      "enum": ["trivial", "small", "medium", "large", "x-large"]
    },
    "risk": {
      "type": "string",
      "description": "Risk level",
      "enum": ["low", "medium", "high", "critical"]
    },
    "links": {
      "type": "array",
      "description": "References for this option",
      "items": {
        "type": "object",
        "required": ["title", "url"],
        "properties": {
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    }
  }
}