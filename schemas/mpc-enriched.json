{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Enhanced MPC Workflow Schema",
  "description": "Schema for Model Predictive Control workflow definitions with enriched artifacts",
  "type": "object",
  "required": [
    "version",
    "plan_id",
    "plan_name",
    "context",
    "architecture",
    "tooling",
    "entry_node",
    "nodes"
  ],
  "properties": {
    "version": {
      "type": "string",
      "description": "Version of the MPC workflow schema",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "plan_id": {
      "type": "string",
      "description": "Unique identifier for the plan",
      "pattern": "^[0-9]+-[a-z0-9-]+$"
    },
    "plan_name": {
      "type": "string",
      "description": "Name of the plan (plan_id without timestamp)",
      "pattern": "^[a-z0-9-]+$",
      "minLength": 1
    },
    "context": {
      "type": "object",
      "required": ["business_goal", "non_functional_requirements"],
      "properties": {
        "business_goal": {
          "type": "string",
          "description": "The business goal this project aims to achieve",
          "minLength": 1
        },
        "non_functional_requirements": {
          "type": "array",
          "description": "List of non-functional requirements",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        }
      }
    },
    "architecture": {
      "type": "object",
      "required": ["overview", "adrs", "constraints"],
      "properties": {
        "overview": {
          "type": "string",
          "description": "High-level architecture overview",
          "minLength": 1
        },
        "adrs": {
          "type": "array",
          "description": "Architecture Decision Records",
          "items": {
            "type": "string",
            "pattern": "\\.md$"
          }
        },
        "constraints": {
          "type": "array",
          "description": "Technical and business constraints",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "tooling": {
      "type": "object",
      "required": ["primary_language", "secondary_languages", "frameworks", "coding_standards"],
      "properties": {
        "primary_language": {
          "type": "string",
          "description": "Primary programming language",
          "minLength": 1
        },
        "secondary_languages": {
          "type": "array",
          "description": "Additional languages used",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "frameworks": {
          "type": "array",
          "description": "Frameworks and libraries used",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "coding_standards": {
          "type": "object",
          "required": ["lint", "formatting", "testing"],
          "properties": {
            "lint": {
              "type": "string",
              "description": "Linting configuration"
            },
            "formatting": {
              "type": "string",
              "description": "Code formatting standards"
            },
            "testing": {
              "type": "string",
              "description": "Testing requirements"
            }
          }
        }
      }
    },
    "entry_node": {
      "type": "string",
      "description": "ID of the entry node",
      "minLength": 1
    },
    "nodes": {
      "type": "array",
      "description": "MPC workflow nodes",
      "items": {
        "$ref": "#/definitions/node"
      },
      "minItems": 1
    }
  },
  "definitions": {
    "node": {
      "type": "object",
      "required": [
        "id",
        "status",
        "materialization",
        "description",
        "detailed_description",
        "subtasks",
        "acceptance_criteria",
        "definition_of_done",
        "downstream"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique node identifier",
          "pattern": "^[a-z0-9-]+$",
          "minLength": 1
        },
        "status": {
          "type": "string",
          "description": "Current status of the node",
          "enum": ["Ready", "In Progress", "Blocked", "Completed", "Specified"]
        },
        "materialization": {
          "type": "number",
          "description": "Materialization score (0.0 to 1.0)",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "description": {
          "type": "string",
          "description": "Brief description of the node",
          "minLength": 1
        },
        "detailed_description": {
          "type": "string",
          "description": "Detailed description of the node",
          "minLength": 1
        },
        "subtasks": {
          "type": "array",
          "description": "List of subtasks",
          "items": {
            "$ref": "#/definitions/subtask"
          },
          "minItems": 1
        },
        "outputs": {
          "type": "array",
          "description": "Outputs produced by this node",
          "items": {
            "type": "string"
          }
        },
        "acceptance_criteria": {
          "type": "array",
          "description": "Criteria that must be met for acceptance",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        },
        "definition_of_done": {
          "type": "string",
          "description": "Definition of when this node is complete",
          "minLength": 1
        },
        "required_knowledge": {
          "type": "array",
          "description": "Knowledge required to complete this node",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "artifacts": {
          "type": "object",
          "description": "Associated artifacts namespaced under plan name",
          "properties": {
            "bpmn": {
              "type": "string",
              "description": "Path to BPMN process diagram",
              "pattern": "^(docs/bpmn/.*\\.json|ai/[^/]+/bpmn/.*\\.json)$"
            },
            "properties": {
              "type": "object",
              "description": "Formal properties and invariants",
              "properties": {
                "invariants": {
                  "type": "string",
                  "description": "Path to invariants definition",
                  "pattern": "^(docs/properties/.*\\.(yaml|json)|ai/[^/]+/properties/.*\\.(yaml|json))$"
                },
                "states": {
                  "type": "string",
                  "description": "Path to state machine properties",
                  "pattern": "^(docs/properties/.*\\.(yaml|json)|ai/[^/]+/properties/.*\\.(yaml|json))$"
                },
                "rules": {
                  "type": "string",
                  "description": "Path to business rules",
                  "pattern": "^(docs/properties/.*\\.(yaml|json)|ai/[^/]+/properties/.*\\.(yaml|json))$"
                },
                "test_specs": {
                  "type": "string",
                  "description": "Path to test specifications",
                  "pattern": "^(docs/properties/.*\\.(yaml|json)|ai/[^/]+/properties/.*\\.(yaml|json))$"
                },
                "state_properties": {
                  "type": "string",
                  "description": "Path to state machine properties (legacy)",
                  "pattern": "^ai/[^/]+/properties/.*\\.json$"
                },
                "generators": {
                  "type": "string",
                  "description": "Path to test data generators",
                  "pattern": "^ai/[^/]+/properties/.*\\.(json|ts)$"
                }
              }
            },
            "schemas": {
              "type": "object",
              "description": "Schema specifications",
              "properties": {
                "validation": {
                  "type": "string",
                  "description": "Path to validation schemas",
                  "pattern": "^(src/schemas/.*\\.ts|ai/[^/]+/schemas/.*\\.ts)$"
                },
                "transformations": {
                  "type": "string",
                  "description": "Path to transformation specifications",
                  "pattern": "^(src/schemas/.*\\.ts|ai/[^/]+/schemas/.*\\.ts)$"
                },
                "contracts": {
                  "type": "string",
                  "description": "Path to contract specifications",
                  "pattern": "^(src/schemas/.*\\.ts|ai/[^/]+/schemas/.*\\.ts)$"
                }
              }
            },
            "specs": {
              "type": "object",
              "description": "Various specification formats",
              "properties": {
                "api": {
                  "type": "string",
                  "description": "Path to OpenAPI/Swagger specification",
                  "pattern": "^ai/[^/]+/specs/.*\\.yaml$"
                },
                "models": {
                  "type": "string",
                  "description": "Path to formal models (TLA+, Alloy)",
                  "pattern": "^ai/[^/]+/specs/.*\\.(tla|als)$"
                },
                "schemas": {
                  "type": "string",
                  "description": "Path to JSON Schema definitions",
                  "pattern": "^ai/[^/]+/specs/.*\\.json$"
                }
              }
            },
            "spec": {
              "type": "string",
              "description": "Combined specification document",
              "pattern": "^(docs/specs/.*\\.(yaml|json)|ai/[^/]+/specs/.*\\.(yaml|json))$"
            },
            "tests": {
              "type": "object",
              "description": "Test suite paths organized by type",
              "properties": {
                "property": {
                  "type": "string",
                  "description": "Property-based tests",
                  "pattern": "^ai/[^/]+/tests/property/.*$"
                },
                "deterministic": {
                  "type": "string",
                  "description": "Deterministic simulation tests",
                  "pattern": "^ai/[^/]+/tests/simulation/.*$"
                },
                "fuzz": {
                  "type": "string",
                  "description": "Fuzz tests for input validation",
                  "pattern": "^ai/[^/]+/tests/fuzz/.*$"
                },
                "contract": {
                  "type": "string",
                  "description": "API contract tests",
                  "pattern": "^ai/[^/]+/tests/contract/.*$"
                },
                "unit": {
                  "type": "string",
                  "description": "Unit tests",
                  "pattern": "^ai/[^/]+/tests/unit/.*$"
                },
                "integration": {
                  "type": "string",
                  "description": "Integration tests",
                  "pattern": "^ai/[^/]+/tests/integration/.*$"
                },
                "e2e": {
                  "type": "string",
                  "description": "End-to-end tests",
                  "pattern": "^ai/[^/]+/tests/e2e/.*$"
                }
              }
            }
          }
        },
        "downstream": {
          "type": "array",
          "description": "IDs of downstream nodes",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          }
        }
      }
    },
    "subtask": {
      "type": "object",
      "required": ["description", "completed"],
      "properties": {
        "description": {
          "type": "string",
          "description": "Description of the subtask",
          "minLength": 1
        },
        "completed": {
          "type": "boolean",
          "description": "Whether the subtask is completed"
        }
      }
    }
  }
}